# Export Control MCP Server Configuration
# Copy this file to .env and customize as needed

# MCP Transport Configuration
EXPORT_CONTROL_MCP_TRANSPORT=stdio
EXPORT_CONTROL_MCP_HOST=127.0.0.1
EXPORT_CONTROL_MCP_PORT=8000

# Embedding Model Configuration
# Options: all-MiniLM-L6-v2 (fast, 384d), BAAI/bge-small-en-v1.5 (better quality)
EXPORT_CONTROL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Storage Paths
EXPORT_CONTROL_CHROMA_PERSIST_DIR=./data/chroma
EXPORT_CONTROL_SANCTIONS_DB_PATH=./data/sanctions.db

# Logging Configuration
EXPORT_CONTROL_LOG_LEVEL=INFO
EXPORT_CONTROL_AUDIT_LOG_PATH=./logs/audit.jsonl

# Optional - External API Keys (if using external LLM for classification suggestions)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
